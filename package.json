{
  "name": "kroger-shopping-ai",
  "version": "1.0.0",
  "description": "AI-powered shopping assistant for Kroger using their Public APIs",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run frontend:dev\" --names \"backend,frontend\" --prefix name --restart-tries 3",
    "dev:stable": "concurrently --kill-others-on-fail \"npm run server:dev\" \"npm run frontend:dev\" --names \"backend,frontend\" --prefix name",
    "server:dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only --ignore-watch node_modules --ignore-watch public --watch src src/server.ts",
    "frontend:dev": "vite",
    "backend:only": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only src/server.ts",
    "demo": "ts-node src/examples/shopping-demo.ts",
    "server": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc",
    "build:frontend": "vite build",
    "start": "node dist/server.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "mcp:playwright:vision": "npx @playwright/mcp@latest --vision --port 8931",
    "mcp:playwright:headless": "npx @playwright/mcp@latest --port 8931",
    "modern:up": "cd modern && docker compose up -d",
    "modern:down": "cd modern && docker compose down"
  },
  "keywords": [
    "kroger",
    "shopping",
    "ai",
    "assistant"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "@vitejs/plugin-legacy": "^7.1.0",
    "babel-jest": "^30.0.5",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^26.1.0",
    "node-fetch": "^3.3.2",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "vite": "^7.0.6"
  }
}
